  log 'MMMMNI+++++++++++++?7DMMMMMMMMMMMMMMMOI+++++++++++++?$MMMMMM'
  log 'MMMMMMZ?+++++++++++++++?ONMMMMMMMDZI++++++++++++++??DMMMMMMM'
